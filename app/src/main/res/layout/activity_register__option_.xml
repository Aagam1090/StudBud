<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:background="@drawable/bg"
    >

    <Button
        android:id="@+id/studentRegistration"
        android:layout_width="382dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="12dp"
        android:background="@color/design_default_color_primary_dark"
        android:text="@string/register_as_a_student"
        android:textColor="#E1FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherRegistration" />

    <Button
        android:id="@+id/teacherRegistration"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="266dp"
        android:layout_marginEnd="12dp"
        android:background="@color/design_default_color_primary_dark"
        android:text="@string/register_as_a_tutor"
        android:textColor="#E6FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
