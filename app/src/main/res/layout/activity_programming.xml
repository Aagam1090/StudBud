<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".ProgrammingActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="30dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/course31"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/worksansregular"
            android:paddingTop="150dp"
            android:text="Projects in Enterprise Java"
            android:textAlignment="center"
            android:textColor="#000"
            android:textFontWeight="550">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="170dp"
            android:text="Learn to build real world apps in Enterprise Java using Spring, Spring Boot, Hibernate, Struct and much more"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="10dp">

        </TextView>

        <Button
            android:id="@+id/course31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="195dp"
            android:text="ENROLL COURSE"
            android:textAlignment="center"
            android:textColor="#000">

        </Button>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="30dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/course32"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/worksansregular"
            android:paddingTop="150dp"
            android:text="Learn Socket Programming Tutorial in C from Scratch"
            android:textAlignment="center"
            android:textColor="#000"
            android:textFontWeight="550">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="182dp"
            android:layout_margin="5dp"
            android:text="Master communication on the internet by learning network socket programming in C in this socket programming tutorial."
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="10dp">

        </TextView>

        <Button
            android:id="@+id/course32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="215dp"
            android:text="ENROLL COURSE"
            android:textAlignment="center"
            android:textColor="#000">

        </Button>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>