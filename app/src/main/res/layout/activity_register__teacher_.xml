<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HelperRegistrationActivity"
        android:background="@drawable/bg">

        <TextView
            android:id="@+id/RegisterHeading"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="48dp"
            android:text="Register"
            android:textAlignment="center"
            android:textSize="50dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#f1f1f1"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameInput_Teach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            android:textColorHint="#f1f1f1"
            app:layout_constraintTop_toBottomOf="@id/RegisterHeading">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/registerName_Teach"
                android:layout_width="match_parent"
                android:textColorHint="#f1f1f1"
                android:layout_height="59dp"
                android:drawableRight="@drawable/ic_font_download_black_24dp"
                android:hint="Enter your name"
                android:inputType="text"
                android:paddingRight="5dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailInput_Teach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColorHint="#f1f1f1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameInput_Teach">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailid_Teach"
                android:textColorHint="#f1f1f1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableRight="@drawable/ic_email_black_24dp"
                android:hint="Enter your email id"
                android:inputType="textEmailAddress"
                android:paddingRight="5dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="#f1f1f1"
            android:id="@+id/phoneInput_Teach"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailInput_Teach">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/registerPhoneno_Teach"
                android:textColorHint="#f1f1f1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your phone no"
                android:drawableRight="@drawable/ic_phone_black_24dp"
                android:paddingRight="5dp"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordInput_Teach"
            android:textColorHint="#f1f1f1"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phoneInput_Teach">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/registerPassword_Teach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter password here"
                android:textColorHint="#f1f1f1"
                android:drawableRight="@drawable/ic_lock_outline_black_24dp"
                android:paddingRight="5dp"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordRepeatInput_Teach"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordInput_Teach">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/repeatPassword_Teach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Repeat password here"
                android:drawableRight="@drawable/ic_lock_outline_black_24dp"
                android:paddingRight="5dp"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/RegisterButton_Teach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="60dp"
            android:background="@color/colorPrimary"
            android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
            android:paddingRight="8dp"
            android:text="Register"
            android:textColor="#f1f1f1f1"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passwordRepeatInput_Teach" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>