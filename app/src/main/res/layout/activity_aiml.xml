<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AIMLActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="30dp"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/course11"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksansregular"
                android:paddingTop="150dp"
                android:text="Learn AI Fundamentals for Beginners"
                android:textAlignment="center"
                android:textColor="#000"
                android:textFontWeight="550">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="170dp"
                android:text="Machine learning is the science of getting computers to act without being explicitly programmed."
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="10dp">

            </TextView>

            <Button
                android:id="@+id/course11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="195dp"
                android:text="ENROLL COURSE"
                android:textAlignment="center"
                android:textColor="#000">

            </Button>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="30dp"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView3">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/course12"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksansregular"
                android:paddingTop="150dp"
                android:text="Learn Machine Learning By Building Projects "
                android:textAlignment="center"
                android:textColor="#000"
                android:textFontWeight="550">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="170dp"
                android:text="Learn to build real world machine learning solutions across different verticals. Master professional ML."
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="10dp">

            </TextView>

            <Button
                android:id="@+id/course12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="195dp"
                android:text="ENROLL COURSE"
                android:textAlignment="center"
                android:textColor="#000">

            </Button>
        </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>